<resources xmlns:tools="http://schemas.android.com/tools">
    <style name="AppTheme" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="colorPrimary">@color/md_theme_primary</item>
        <item name="colorOnPrimary">@color/md_theme_onPrimary</item>
        <item name="colorPrimaryContainer">@color/md_theme_primaryContainer</item>
        <item name="colorOnPrimaryContainer">@color/md_theme_onPrimaryContainer</item>
        <item name="colorPrimaryInverse">@color/md_theme_inversePrimary</item>

        <item name="colorSecondary">@color/md_theme_secondary</item>
        <item name="colorOnSecondary">@color/md_theme_onSecondary</item>
        <item name="colorSecondaryContainer">@color/md_theme_secondaryContainer</item>
        <item name="colorOnSecondaryContainer">@color/md_theme_onSecondaryContainer</item>

        <item name="colorTertiary">@color/md_theme_tertiary</item>
        <item name="colorOnTertiary">@color/md_theme_onTertiary</item>
        <item name="colorTertiaryContainer">@color/md_theme_tertiaryContainer</item>
        <item name="colorOnTertiaryContainer">@color/md_theme_onTertiaryContainer</item>
        <item name="colorError">@color/md_theme_error</item>

        <item name="windowActionModeOverlay">true</item>
        <item name="android:statusBarColor" tools:targetApi="23">?attr/colorSurface</item>
        <item name="android:windowLightStatusBar" tools:targetApi="23">?isLightTheme</item>
        <item name="android:windowTranslucentNavigation">true</item>

        <item name="materialAlertDialogTheme">@style/AppTheme.AlertDialog</item>
    </style>

    <style name="AppTheme.QRCapture" parent="AppTheme">
        <item name="android:windowTranslucentNavigation">false</item>
    </style>

    <style name="AppTheme.AlertDialog" parent="ThemeOverlay.Material3.MaterialAlertDialog" >
        <item name="android:windowTranslucentNavigation">false</item>
    </style>

    <style name="AppTheme.Button.DrawingFill" parent="Widget.Material3.Button">
        <item name="android:layout_width">30dp</item>
        <item name="android:layout_height">30dp</item>
        <item name="android:layout_margin">10dp</item>
        <item name="iconPadding">0dp</item>
        <item name="android:insetLeft">0dp</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetRight">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="shapeAppearanceOverlay">@style/AppTheme.ShapeAppearanceOverlay.DrawingFill</item>
    </style>

    <style name="AppTheme.ShapeAppearanceOverlay.DrawingFill" parent="">
        <item name="cornerSize">50%</item>
        <item name="cornerFamily">rounded</item>
    </style>

</resources>
