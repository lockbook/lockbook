<resources>
    <style name="DarkBlue" parent="Theme.AppCompat"> // revert to original colors
        <item name="android:navigationBarColor">@color/black</item>
        <item name="colorPrimary">@color/blue</item>
        <item name="colorAccent">@color/blue</item>
        <item name="colorPrimaryDark">@color/black</item>
        <item name="android:windowBackground">@color/black</item>
    </style>

    <style name="DarkBlue.Dialog" parent="Theme.AppCompat.Dialog">
        <item name="android:background">@color/black</item>
        <item name="colorPrimary">@color/blue</item>
        <item name="colorAccent">@color/blue</item>
        <item name="colorPrimaryDark">@color/black</item>
        <item name="android:windowMinWidthMajor">100%</item>
        <item name="android:windowMinWidthMinor">100%</item>
    </style>

    <style name="DarkBlue.NoActionBar" parent="DarkBlue">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Text.Caption" parent="TextAppearance.AppCompat.Caption" />

    <style name="Text.Small" parent="TextAppearance.AppCompat.Small">
        <item name="android:fontFamily">monospace</item>
    </style>

    <style name="Text.Body" parent="TextAppearance.AppCompat.Body1">
        <item name="android:fontFamily">monospace</item>
        <item name="android:textAlignment">center</item>
    </style>

    <style name="Text.Medium" parent="TextAppearance.AppCompat.Medium">
        <item name="android:fontFamily">monospace</item>
    </style>

    <style name="File.Title" parent="TextAppearance.AppCompat">
        <item name="android:textSize">14sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:fontFamily">monospace</item>
        <item name="android:layout_marginStart">16dp</item>
    </style>

    <style name="File.SubTitle" parent="TextAppearance.AppCompat.Small">
        <item name="alpha">0.4</item>
        <item name="android:fontFamily">monospace</item>
        <item name="android:gravity">start</item>
    </style>

    <style name="Text.Headline" parent="TextAppearance.AppCompat.Display1">
        <item name="android:fontFamily">monospace</item>
        <item name="android:textAlignment">center</item>
    </style>

    <style name="Button" parent="Widget.AppCompat.Button" />

    <style name="Button.Small" parent="Widget.AppCompat.Button.Small" />

    <style name="Button.Colored" parent="Widget.AppCompat.Button.Colored" />

    <style name="Button.Borderless" parent="Widget.AppCompat.Button.Borderless" />

    <style name="Button.Borderless.Colored" parent="Widget.AppCompat.Button.Borderless.Colored" />
</resources>
