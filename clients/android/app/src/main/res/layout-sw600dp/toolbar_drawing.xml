<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/drawing_tools_menu"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="bottom|center_horizontal"
    android:focusable="true">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/finger_drawing"
            style="@style/Widget.Material3.Button.IconButton"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:contentDescription="@string/drawing_finger_description"
            app:srcCompat="@drawable/ic_outline_touch_app_24" />

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/drawing_erase"
            style="@style/Widget.Material3.Button.IconButton"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:contentDescription="@string/drawing_eraser_description"
            app:srcCompat="@drawable/ic_eraser_outline" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/drawing_color_white"
            style="@style/AppTheme.Button.DrawingFill" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/drawing_color_black"
            style="@style/AppTheme.Button.DrawingFill" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/drawing_color_blue"
            style="@style/AppTheme.Button.DrawingFill" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/drawing_color_red"
            style="@style/AppTheme.Button.DrawingFill" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/drawing_color_green"
            style="@style/AppTheme.Button.DrawingFill" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/drawing_color_yellow"
            style="@style/AppTheme.Button.DrawingFill" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/drawing_color_magenta"
            style="@style/AppTheme.Button.DrawingFill" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/drawing_color_cyan"
            style="@style/AppTheme.Button.DrawingFill" />

        <com.google.android.material.slider.Slider
            android:id="@+id/drawing_pen_size"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_margin="10dp"
            android:valueFrom="5.0"
            android:stepSize="5.0"
            android:valueTo="100.0"  />

    </LinearLayout>
</com.google.android.material.card.MaterialCardView>