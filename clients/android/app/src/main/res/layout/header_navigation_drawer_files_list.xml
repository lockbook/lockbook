<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="20dp"
    android:layout_marginTop="20dp"
    android:fitsSystemWindows="true"
    android:orientation="vertical">

    <app.futured.donut.DonutProgressView
        android:id="@+id/filesListUsageDonut"
        android:layout_width="100dp"
        android:layout_height="100dp"
        app:donut_gapWidth="0"
        app:donut_strokeWidth="8dp"/>

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/filesListUsage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingVertical="20dp"
        android:freezesText="true"
        android:textAppearance="?attr/textAppearanceLabelLarge" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/filesListLastSynced"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="10dp"
        android:text="@string/default_value"
        android:freezesText="true"
        android:textAppearance="?attr/textAppearanceLabelMedium" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/filesListLocalDirty"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="10dp"
        android:text="@string/default_value"
        android:freezesText="true"
        android:textAppearance="?attr/textAppearanceLabelMedium" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/filesListServerDirty"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="10dp"
        android:text="@string/default_value"
        android:freezesText="true"
        android:textAppearance="?attr/textAppearanceLabelMedium" />

</LinearLayout>