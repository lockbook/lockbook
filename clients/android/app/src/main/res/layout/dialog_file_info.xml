<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingHorizontal="30dp"
    android:paddingVertical="10dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingVertical="6dp"
        android:orientation="horizontal">

        <com.google.android.material.textview.MaterialTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/TextAppearance.Material3.LabelLarge"
            android:text="@string/popup_info_name" />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/popup_info_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/default_value" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingVertical="6dp"
        android:orientation="horizontal">

        <com.google.android.material.textview.MaterialTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/TextAppearance.Material3.LabelLarge"
            android:text="@string/popup_info_id" />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/popup_info_id"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/default_value" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingVertical="6dp"
        android:orientation="horizontal">

        <com.google.android.material.textview.MaterialTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/TextAppearance.Material3.LabelLarge"
            android:text="@string/popup_info_file_type" />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/popup_info_file_type"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/default_value" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingVertical="6dp"
        android:orientation="horizontal">

        <com.google.android.material.textview.MaterialTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/TextAppearance.Material3.LabelLarge"
            android:text="@string/popup_info_metadata_version" />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/popup_info_metadata_version"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/default_value" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingVertical="6dp"
        android:orientation="horizontal">

        <com.google.android.material.textview.MaterialTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/TextAppearance.Material3.LabelLarge"
            android:text="@string/popup_info_content_version" />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/popup_info_content_version"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/default_value" />

    </LinearLayout>
</LinearLayout>
