<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:paddingHorizontal="25dp">

    <EditText
        android:id="@+id/welcome_account_string"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:fontFamily="monospace"
        android:hint="@string/import_description"
        android:imeOptions="actionDone"
        android:inputType="textPassword"
        android:autofillHints="password"
        android:layout_marginTop="20dp" />

    <ImageButton
        android:id="@+id/new_account_qr_import_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="?android:selectableItemBackground"
        android:contentDescription="@string/qr_code_content_description"
        app:srcCompat="@drawable/ic_baseline_qr_code_scanner_24"  />

    <Button
        android:id="@+id/welcome_submit"
        style="@style/Main.Button.Borderless.Colored"
        android:text="@string/welcome_import" />

</LinearLayout>